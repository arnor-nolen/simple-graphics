  "version": "0.2.0",
  "configurations": [
    {
      "name": "Mac debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/main",
      "osx": {
        "externalConsole": true,
        "MIMode": "lldb"
      },
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "preLaunchTask": "Build"
    },
    {
      "name": "Windows debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/main.exe",
      "windows": {
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "C:\\MinGW\\mingw64\\bin\\gdb.exe"
      },
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "preLaunchTask": "Build"
    }
  ]
}

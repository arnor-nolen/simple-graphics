{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build",
      "command": "g++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}",
        "-std=c++11"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}

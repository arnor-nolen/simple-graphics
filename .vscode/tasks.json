{
  "tasks": [
    {
      "type": "shell",
      "label": "Build",
      "osx": {
        "command": "cmake",
        "args": [".", "-Bbuild"]
      },
      "windows": {
        "command": "g++",
        "args": [
          "-g",
          "main.cpp",
          "-o",
          "${workspaceRoot}/bin/main",
          "-IC:/MinGW/SDLx64/include/SDL2",
          "-LC:/MinGW/SDLx64/lib/",
          "-lmingw32",
          "-lSDL2main",
          "-lSDL2"
        ]
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}

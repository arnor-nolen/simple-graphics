{
  "tasks": [
    {
      "type": "shell",
      "label": "cmake",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "command": "cmake",
      "osx": {
        "args": [".."]
      },
      "windows": {
        "args": ["..", "-G", "MinGW Makefiles"]
      }
    },
    {
      "type": "shell",
      "label": "make",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "osx": {
        "command": "make"
      },
      "windows": {
        "command": "mingw32-make"
      },
      "dependsOn": ["cmake"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}

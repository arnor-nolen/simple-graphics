{
  "tasks": [
    {
      "type": "shell",
      "label": "cmake",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "command": "cmake",
      "osx": {
        "args": [
          "..",
          "-DCMAKE_LIBRARY_PATH='/usr/local/Cellar/sdl2/2.0.10/lib;/usr/local/Cellar/glew/2.1.0/lib;/usr/local/Cellar/sdl2_image/2.0.5/lib'",
          "-DCMAKE_INCLUDE_PATH='/usr/local/Cellar/sdl2/2.0.10/include/SDL2;/usr/local/Cellar/glew/2.1.0/include/;/usr/local/Cellar/glm/0.9.9.5/include/;/usr/local/Cellar/sdl2_image/2.0.5/include/SDL2'"
        ]
      },
      "windows": {
        "args": [
          "..",
          "-G",
          "MinGW Makefiles",
          "-DCMAKE_LIBRARY_PATH='C:/MinGW/SDLx64/lib/;C:/MinGW/glew/lib/Release/x64'",
          "-DCMAKE_INCLUDE_PATH='C:/MinGW/SDLx64/include/SDL2;C:/MinGW/glew/include/'"
        ]
      }
    },
    {
      "type": "shell",
      "label": "make",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "osx": {
        "command": "make"
      },
      "windows": {
        "command": "mingw32-make"
      },
      "dependsOn": ["cmake"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}

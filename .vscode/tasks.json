{
  "tasks": [
    {
      "type": "shell",
      "label": "Build",
      "osx": {
        "command": "/usr/bin/clang++",
        "args": [
          "-g",
          "main.cpp",
          "-o",
          "${workspaceRoot}/bin/main",
          "-I/usr/local/Cellar/sdl2/2.0.9_1/include/SDL2",
          "-L/usr/local/Cellar/sdl2/2.0.9_1/lib",
          "-lSDL2"
        ]
      },
      "windows": {
        "command": "g++",
        "args": [
          "-g",
          "main.cpp",
          "-o",
          "${workspaceRoot}/bin/main",
          "-IC:/MinGW/SDLx64/include/SDL2",
          "-LC:/MinGW/SDLx64/lib/",
          "-lmingw32",
          "-lSDL2main",
          "-lSDL2"
        ]
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}

{
  "tasks": [
    {
      "type": "shell",
      "label": "Mac build",
      "command": "/usr/bin/clang++",
      "args": [
        "-g",
        "main.cpp",
        "-o",
        "${workspaceRoot}/bin/main",
        "-I${workspaceRoot}/include/SDL2",
        "-L${workspaceRoot}/lib",
        "-lSDL2"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Windows build",
      "command": "",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "-w",
        "-Wl,-subsystem,windows",
        "-IC:\\MinGW\\SDLx64\\include\\SDL2",
        "-LC:\\MinGW\\SDLx64\\lib",
        "-lmingw64",
        "-lSDL2main",
        "-lSDL2"
      ],
      "options": {
        "cwd": ""
      }
    }
  ],
  "version": "2.0.0"
}
